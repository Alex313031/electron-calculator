{
  "name": "electron-calculator",
  "appName": "Electron Calculator",
  "applicationId": "ElectronCalculator",
  "version": "1.0.3",
  "description": "Calculator built with Electron.",
  "author": "Alex313031",
  "license": "BSD-3-Clause",
  "repository": "https://github.com/Alex313031/electron-calculator-app",
  "main": "./app/app.js",
  "scripts": {
    "test": "echo \"Error: No test specified\" && exit 1",
    "clean": "rm -r -f -v node_modules && rm -r -f dist/* && cd app && npm run clean",
    "distclean": "rm -r -f dist/*",
    "build": "electron-builder --dir",
    "dist": "electron-builder",
    "start": "cd app && npm run start",
    "winstart": "cd app && npm run winstart",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "electron": "22.3.6",
    "electron-builder": "^22.14.13"
  },
  "build": {
    "electronVersion": "22.3.6",
    "extraFiles": [
      {
        "from": "app/icon64.png"
      },
      {
        "from": "app/README.txt"
      }
    ],
    "appId": "electron-calculator",
    "files": [
      "**/*"
    ],
    "linux": {
      "target": [
        "zip",
        "deb"
      ],
      "maintainer": "Alex313031",
      "vendor": "Alex313031",
      "synopsis": "Calculator built with Electron.",
      "category": "Math;Utility;Calculator;",
      "executableName": "electron-calculator",
      "artifactName": "${productName}_${version}_${arch}.${ext}",
      "desktop": {
        "Name": "Electron Calculator",
        "StartupWMClass": "electron-calculator"
      }
    },
    "win": {
      "target": [
        "zip",
        "nsis"
      ],
      "publisherName": "Alex313031",
      "artifactName": "Electron_Calculator_${version}_${arch}.${ext}"
    },
    "nsis": {
      "shortcutName": "Electron Calculator",
      "artifactName": "Electron_Calculator_Setup_${version}_${arch}.${ext}",
      "deleteAppDataOnUninstall": true,
      "uninstallDisplayName": "Electron Calculator ${version}"
    }
  }
}
